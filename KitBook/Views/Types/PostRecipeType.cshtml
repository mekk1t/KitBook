@model KitBook.Models.Database.Entities.Types.RecipeType

@{
    ViewData["Title"] = "NEW";
}

<h1>Создание нового типа рецептов</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="PostRecipeType" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" readonly="readonly" style="font-style:italic" value="@Guid.NewGuid()" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="GetRecipeTypes">К списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
