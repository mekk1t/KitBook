@model KitBook.Models.ViewModels.ImageViewModel

@if (Model?.Base64 != null && Model?.Extension != null)
{
    <img class="img-fluid littleImage" src="data:image/@(Model.Extension);base64,@(Model.Base64)" alt="card image" />
}
else
{
    <img class="img-fluid" src="~/images/placeholder.png" alt="placeholder image" />
}
