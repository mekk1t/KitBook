@model IEnumerable<RecipeViewModel>

@{
    ViewData["Title"] = "Админка: Рецепты";
    var ModelList = Model.ToList();
}

<p>
    <a asp-action="PostRecipe" class="btn btn-outline-primary">Создать новый</a>
</p>

<table class="table table-responsive-sm">
    <thead>
        <tr>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < ModelList.Count; i++)
        {
            var recipe = ModelList[i];
        <tr>
            <td class="align-middle">@recipe.Title</td>
            <td>@{await Html.RenderPartialAsync("_ImageStretchedPartial", recipe.Thumbnail);}</td>
            <td class="align-middle"><a class="btn btn-outline-warning" asp-action="PutRecipe" asp-route-id="@recipe.Id">Редактировать</a></td>
            <td class="align-middle"><a class="btn btn-outline-danger" asp-action="DeleteRecipe" asp-route-id="@recipe.Id">Удалить</a></td>
        </tr>
        }
    </tbody>
</table>