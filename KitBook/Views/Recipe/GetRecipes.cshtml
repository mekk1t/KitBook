@model IEnumerable<KitBook.Models.ViewModels.RecipeViewModel>

@{
    ViewData["Title"] = "Рецепты";
    var ModelList = Model.ToList();
}

<h1>Рецепты</h1>
<br />

<div class="container">
    <div class="row">
        @for (int i = 0; i < ModelList.Count; i++)
        {
            var recipe = ModelList[i];
                <div class="col-sm-4 d-flex align-items-stretch">
                    <div class="m-1 card">
                        <div class="card-header d-flex align-items-center justify-content-center h-100">
                            @recipe.Title
                        </div>
                        <a asp-action="GetRecipe" asp-route-id="@recipe.Id">
                            @{ await Html.RenderPartialAsync("_ImageCardPartial", recipe.Thumbnail);}
                        </a>
                        <div class="card-body flex-column h-100">
                            @{ RenderDescription(recipe.Description); }
                        </div>
                        <div class="card-footer text-center">
                            <a target="_blank" rel="noreferrer" href="@recipe.SourceURL" class="btn btn-primary">Источник</a>
                        </div>
                    </div>
                </div>
        }
    </div>
</div>

@functions{
    void RenderDescription(string description)
    {
        if (!string.IsNullOrEmpty(description))
        {
            <p class="card-text">
                @description.Split('.')[0]
            </p>
        }
        else
        {
            <p class="card-text text-muted">
                <i>Описание не предоставлено</i>
            </p>
        }
    }
}