@model IEnumerable<KitBook.Models.ViewModels.RecipeViewModel>

@{
    ViewData["Title"] = "Рецепты";
}

<h1>Рецепты</h1>
<br />
<table class="table">
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <div class="row row-cols-1">
                    <div class="col">
                        <a asp-action="GetRecipe" asp-route-id="@item.Id">@item.Title</a>
                    </div>
                    @if (item.Thumbnail != null)
                    {
                        <div class="col">
                            <div class="w-25">
                                @{await Html.RenderPartialAsync("_ImagePartial", item.Thumbnail);}
                            </div>
                        </div>
                    }
                </div>
            </td>
            <td>
                @item.CookingTimeMinutes минут
            </td>
            <td>
                <div class="row row-cols-1">
                    <div class="col">
                        <span>@item.CookingType</span>
                    </div>
                    @if (item.CookingTypeIcon != null)
                     {
                    <div class="col">
                        <div class="w-25">
                            @{await Html.RenderPartialAsync("_ImagePartial", item.CookingTypeIcon);}
                        </div>
                    </div>
                     }
                </div>
            </td>
            <td>
                <div class="row row-cols-1">
                    <div class="col">
                        <span>@item.RecipeType</span>
                    </div>
                    @if (item.RecipeTypeIcon != null)
                    {
                        <div class="col">
                            <div class="w-25">
                                @{await Html.RenderPartialAsync("_ImagePartial", item.RecipeTypeIcon);}
                            </div>
                        </div>
                    }
                </div>
            </td>
            <td>
                <div class="row row-cols-1">
                    <div class="col">
                        <span>@item.DishType</span>
                    </div>
                    @if (item.DishTypeIcon != null)
                    {
                        <div class="col">
                            <div class="w-25">
                                @{await Html.RenderPartialAsync("_ImagePartial", item.DishTypeIcon);}
                            </div>
                        </div>
                    }
                </div>
            </td>
            <td>
                <a target="_blank" rel="noreferrer" class="btn btn-primary" href="@item.SourceURL">Источник</a>
            </td>
        </tr>
}
    </tbody>
</table>
