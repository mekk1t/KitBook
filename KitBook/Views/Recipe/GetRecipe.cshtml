@model KitBook.Models.DTO.RecipeDto

@{
    ViewData["Title"] = Model.Title;
}

<h1>@Model.Title.Trim()</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CookingTimeMinutes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CookingTimeMinutes)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SourceURL)
        </dt>
        <dd class="col-sm-10">
            <a href="@Model.SourceURL">@Model.SourceURL</a>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CookingTypeId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CookingType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RecipeTypeId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RecipeType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DishTypeId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DishType)
        </dd>
    </dl>
    @if (Model.Stages?.Count > 0)
    {
        <dl>
        @for (int i = 0; i < Model.Stages.Count; i++)
        {
        <dt class="col-sm-2">
            Шаг №@Html.DisplayFor(model => model.Stages[i].Index)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stages[i].Description)
        </dd>
        }
        </dl>
    }
    @if (Model.Ingredients?.Count > 0)
    {
        <dl>
            @for (int i = 0; i < Model.Ingredients.Count; i++)
            {
                <dt class="col-sm-2">
                    @Model.Ingredients[i].Name
                </dt>
                    @if (Model.Ingredients[i].Ml != null)
                    {

                <dd class="col-sm-10">
                    @Model.Ingredients[i].Ml МЛ
                </dd>
                    }
                    else if (Model.Ingredients[i].G != null)
                    {
                        <dd class="col-sm-10">
                            @Model.Ingredients[i].G грамм
                        </dd>
                    }
                    else
                    {
                        <dd class="col-sm-10">
                            @Model.Ingredients[i].Amount штук
                        </dd>
                    }
            }
        </dl>
    }
</div>
<div>
    <a asp-action="PutRecipe" asp-route-id="@Model.Id">Редактировать</a> |
    <a asp-action="GetRecipes">К списку</a> |
    <a asp-controller="Home" asp-action="Index">На главную</a>
</div>
