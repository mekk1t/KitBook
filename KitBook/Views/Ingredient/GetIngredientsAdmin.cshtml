@model IEnumerable<IngredientViewModel>

@{
    ViewData["Title"] = "Ингредиенты";
}

<h1>ИНГРЕДИЕНТЫ</h1>

<p>
    <a asp-action="PostIngredient" class="btn btn-outline-primary">Создать новый</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="GetIngredient" asp-route-id="@item.Id">@item.Name</a>
                </td>
                <td>
                    <a asp-action="PutIngredient" asp-route-id="@item.Id" class="btn btn-outline-warning">Редактировать</a>
                </td>
                <td>
                    <a asp-action="DeleteIngredient" asp-route-id="@item.Id" class="btn btn-outline-danger">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
