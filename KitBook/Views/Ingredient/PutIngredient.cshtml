@model KitBook.Models.ViewModels.Ingredient.EditIngredient

@{
    ViewData["Title"] = "Редактирование";
}

<h1>Редактирование ингредиента "@Model.Name"</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="PutIngredient" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group form-check form-check-inline">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsSpicy" /> @Html.DisplayNameFor(model => model.IsSpicy)
                </label>
            </div>
            <div class="form-group form-check form-check-inline">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsSugary" /> @Html.DisplayNameFor(model => model.IsSugary)
                </label>
            </div>
            <div class="form-group form-check form-check-inline">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsSour" /> @Html.DisplayNameFor(model => model.IsSour)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="IngredientTypeId" class="control-label"></label>
                <select asp-for="IngredientTypeId" class="form-control" asp-items="ViewBag.IngredientTypes"></select>
                <span asp-validation-for="IngredientTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-outline-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="GetIngredients">К списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
